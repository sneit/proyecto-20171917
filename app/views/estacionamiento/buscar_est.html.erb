<%= form_for :estacionamiento, :url => {:controller => "estacionamiento", :action => "buscar_est_get"}, :method => :get, :html => { :class => "form-horizontal" , :id => "form_producto"}  do |f| %>
    
    <section class="content">
        
        <div class="box box-default">
            <div class="box-header with-border">
              <h3 class="box-title">Buscar Estacionamiento</h3>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                      <input type="text" class="form-control" placeholder="Buscar por numero de DNI" name="txt_dni">
                </div>
                <div class="col-sm-2">
                    <input type="submit" value="Buscar"/>
                </div>
            </div>
           <% end %>
        </div>
            
        <div class = "row">
            <div class="col-md-12">
                
                <div class="box">
                    <div class="box-body">
                    
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                  <th>ID</th>
                                  <th>DNI</th>
                                  <th>EST.</th>
                                  <th>HRA INGRESO</th>
                                  <th>HRA SALIDA</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                <% if @estacionamiento != nil && @estacionamiento != ""
                                 
                                    @estacionamiento.each do |p| %>
                                <tr class="gradeU">
                                    <td><%=p.id %></td>
                                    <td><%=p.dni %></td>
                                    <td><%=p.est1 %></td>
                                    <td><%=p.hr_ingreso %></td>
                                    <td><%=p.hr_salida %></td>
                                </tr>
                                <% end end %>
                            </tbody>
                    
                        </table>
                    </div> 
                </div>
            </div>
        </div>
    
    </div>


