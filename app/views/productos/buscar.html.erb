<%= form_for :producto, :url => {:controller => "productos", :action => "buscar_get"}, :method => :get, :html => { :class => "form-horizontal" , :id => "form_producto"}  do |f| %>
    
<section class="content">
        
        
    <div class="box-body">
        <div class="row">
            <div class="col-md-5">
              
                <div class="row">
                    <div class="col-sm-6">
                    </div>
                </div>
            </div>
        </div>
    </div>
    
        <div class="box box-default">
            <div class="box-header with-border">
              <h3 class="box-title">Buscar Producto</h3>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                      <input type="text" class="form-control" placeholder="Buscar por nombre del producto" name="txt_nombre_producto">
                </div>
                <div class="col-sm-2">
                    <input type="submit" value="Buscar"/>
                </div>
            </div>
           <% end %>
        </div>
            
        <div class = "row">
            <div class="col-md-12">
                
                <div class="box">
                    <div class="box-body">
                    
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                  <th>Codigo</th>
                                  <th>Nombre</th>
                                  <th>Precio</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                <% if @productos != nil && @productos != ""
                                 
                                    @productos.each do |p| %>
                                <tr class="gradeU">
                                    <td><%=p.id %></td>
                                    <td><%=p.nombre %></td>
                                    <td><%=p.precio %></td>
                                </tr>
                                <% end end %>
                            </tbody>
                    
                        </table>
                    </div> 
                </div>
            </div>
        </div>
    
    </div>

