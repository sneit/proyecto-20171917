 <section class="content-header">
  <h1>
    RoR
    <small>Formularios</small>
  </h1>
</section>

<section class="content">
         <!-- REGISTRAR PERSONA -->
      <div class="box box-default">
        <div class="box-header with-border">
          <h3 class="box-title">Formularios</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
          <div class="row">
            <div class="col-md-12">
                
                    <div class="panel-body">
              
                  <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#tes1">Test1</a></li>
                    <li><a data-toggle="tab" href="#test2">Test2</a></li>
                    <li><a data-toggle="tab" href="#test3">Test3</a></li>
                    <li><a data-toggle="tab" href="#test4">Test4</a></li>
                    <li><a data-toggle="tab" href="#test5">Test5</a></li>
                  </ul>
                
                  <div class="tab-content">
                    <div id="test1" class="tab-pane fade in active">
                       
                        <%= form_for :producto, :url => {:controller => "test", :action => "tab1_post"}, :method => :post, :html => { :class => "form-horizontal" , :id => "form_producto"}  do |f| %>
                        <h3>Formulario Test 1</h3>
                        
                        <div class="form-group">
                            <div class="col-sm-3">
                                <input type="text" class="form-control" placeholder="Ingrese nombre del producto" name="txt_nombre_producto">
                            </div>
                            
                            <div class="col-sm-1">
                                <input type="number" class="form-control" placeholder="Ingrese precio del producto" name="num_precio_producto">
                            </div>
                            
                            <div class="col-sm-2">
                                <input type="submit" value="Enviar"/>
                            </div>
                        </div>

                        <% end %>
  
                        <% if @txt_nombre_producto %>
                         <h4>
                           El nombre del producto es: <%= @txt_nombre_producto %> <br/>
                           El precio es: <%= @num_precio_producto %>
                         </h4>
                        <% else %>
                         
                        <% end %>
                       
                    </div>
                    <div id="test2" class="tab-pane fade">
                        Test2
                    </div>
                    <div id="test3" class="tab-pane fade">
                        Test3
                    </div>
                    <div id="test4" class="tab-pane fade">
                        Test4
                    </div>
                    <div id="test5" class="tab-pane fade">
                        Test4
                    </div>
                  </div>
                  
                </div>
                
            </div>
            
          </div>
        </div>
      </div>
      
</section>